/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:space-between;
  box-sizing: border-box;
} 
.page-body {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.today-box{
  width: 100%;
  display: flex;
    align-items:center;
  flex-direction: column;
  justify-content: space-between;
}
.today {
  font-size: 80rpx;
  opacity: 0.7;
}

.today-date {
  color: #aaa;
  margin: 10rpx;
  font-size: 11pt;
}

.today-count {
  width: 100%;
  margin-top: 50rpx;
}

.today-count-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
  height: 100rpx;
  align-items: center;
  padding:0 30rpx 0 30rpx;
}
.today-count-box.first{
  margin-top: 50rpx;
}

.today-count-item-left {
  color: #bbb;
}

.today-count-item-left .name {
  font-size: 11pt;
  margin-left: 20rpx;
}

.today-count-item-right {
  margin-top: 8rpx;
  color: #aaa;
}

.today-count-item-right .unit {
  font-size: 11pt;
}
 .record{
  height: 100rpx;
  margin-top: 50rpx;
  padding: 0 30rpx 0 30rpx;
}
