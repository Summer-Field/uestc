@import "../common/weui.wxss";
.container-page {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:space-between;
  box-sizing: border-box;
} 
.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}
.page-section{
  margin-bottom: 20rpx;
}
.padding-box{
    padding: 20rpx 30rpx 20rpx 30rpx;
}

button.ok{
  margin-top: 50rpx;
  margin-bottom: 20rpx;
}
radio-group{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  line-height: 60rpx;
}
radio-group view{
  margin-right: 30rpx;
}
.invalid{
  color:red
}